<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                    android:angle="270"
                    android:centerColor="#C7C7C7"
                    android:centerY="0.5"
                    android:endColor="#A3A3A3"
                    android:startColor="#C7C7C7"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                        android:angle="0"
                        android:startColor="@color/progressGreen"
                        android:centerColor="@color/progressGreen"
                        android:endColor="@color/progressRed"
                        />
            </shape>
        </clip>
    </item>
</layer-list>